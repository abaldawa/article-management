{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./build",
    "build": "npm run clean && node_modules/.bin/tsc",
    "start": "npm run build && NODE_OPTIONS=--enable-source-maps node ./build/server.js",
    "start:dev": "npm run build:watch | NODE_OPTIONS=--enable-source-maps nodemon --inspect ./build/server.js",
    "build:watch": "npm run build -- -w",
    "dev": "node --watch --loader ts-node/esm/transpile-only src/server.ts",
    "database": "node --watch --loader ts-node/esm/transpile-only src/database.ts"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.8",
    "drizzle-kit": "^0.30.5",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "better-sqlite3": "^11.8.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.0",
    "express": "^4.21.2",
    "http-status-codes": "^2.3.0",
    "jose": "^6.0.8",
    "rimraf": "^6.0.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  }
}
